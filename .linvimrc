#! /usr/bin/env zsh

# better ls
alias l="ls -lh"
alias ll="ls -lah"

# coredump
ulimit -c unlimited

# english
export LANGUAGE='en_US.UTF-8'
export LANG="en_US.UTF-8"

# vcmd
export PATH=~/.vcmd:$PATH

# prompt color scheme
if [[ $TERM = *256color* || $TERM = *rxvt* ]]; then
    _prompt_color=(
      "%F{81}"  # Turquoise
      "%F{166}" # Orange
      "%F{135}" # Purple
      "%F{161}" # Hotpink
      "%F{118}" # Limegreen
    )
else
    _prompt_color=(
      "%F{cyan}"
      "%F{yellow}"
      "%F{magenta}"
      "%F{red}"
      "%F{green}"
    )
fi

PROMPT="${_prompt_color[3]}%n%f@${_prompt_color[2]}%m%f ${_prompt_color[1]}[%D{%Y-%m-%d %H:%M}]%f in ${_prompt_color[5]}%~%f
$ "

export CLICOLOR=1

# export PATH=/usr/local/opt/llvm/bin:$PATH
source $HOME/.cargo/env
export JAVA_HOME=/Users/rolin/.java/1.8.242_mac
export PATH=$JAVA_HOME/bin:$PATH
export PATH=~/.java/apache-maven-3.6.3/bin:$PATH
